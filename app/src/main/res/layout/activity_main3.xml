<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-149dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="183dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mjf" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="293dp"
                android:layout_height="242dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:srcCompat="@drawable/mjfbtf" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="127dp"
                android:layout_height="185dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:srcCompat="@drawable/jjjjj" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Майкл Джей Фокс"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Майкл Джей Фокс – канадский и американский киноактер, чью блестящую карьеру прервала коварная болезнь Паркинсона. Он известен всему миру как Марти Макфлай из оскароносной фантастической комедии «Назад в будущее», лауреат премий «Сатурн», «Золотой глобус», «Эмми», обладатель двух личных звезд – на аллеях Славы в Голливуде и в Канаде. По версии издания «Таймс» он входит в список «100 людей, чья власть, талант и моральный пример изменили мир». Режиссер и продюсер, в последние годы пишет книги."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/button3"
                android:layout_width="302dp"
                android:layout_height="46dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/purple_700"
                android:text="Назад в меню"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>